  <h1><%= @list.name %></h1>

<% @list.bookmarks.each do |bookmark| %>
          <h3><%= bookmark.movie.title %></h3>
            <%=bookmark.movie.overview %> <br/>
            <%=link_to bookmark.movie.poster_url %> <br/>
            <span> Comment: <em><%=bookmark.comment %> </em> </span><br/>
            <%= link_to "delete this bookmark", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{bookmark.movie.title} from your #{@list.name} list"}, class: 'text-danger' %>
<% end %>

  <div>
    <%= link_to "delete this list",
      list_path(@list),
      data: { turbo_method: :delete,
              turbo_confirm: "Are you sure you want to remove #{@list.name} from your lists ?"
              },
      class: 'text-danger'
    %>
  </div>
  <div>
    <%= link_to "<= Add a bookmark", new_list_bookmark_path(@list) %>
    <%= link_to "<= Back to lists", lists_path %>
  </div>
